@model PetCenter9.Models.Pets

@{
    ViewData["Title"] = "Details";
}


<div class="card content-height">
    <div class="card-header">
        <div class="d-flex justify-content-between m-3">
            <h4>Details</h4>
            <h4>@Model.Name</h4>
        </div>
    </div>
    <div class="card-body overflow-auto">
        <dl class="row">
            <div class="col-8">
                <div class="row">
                    <dt class="col-sm-2">
                        Pet Picture
                    </dt>
                    <dd class="col-sm-10">
                        <img src="@Model.PetPictureURL" alt="Pet Picture" class="img-square" />
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Age)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Age)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Owners)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Owners.Email)
                    </dd>
                </div>
            </div>
            <div class="col-4">
                <div class="card nested-items-card">
                    <div class="card-header">
                        <dt>@Html.DisplayNameFor(model => model.Vaccine)</dt>
                    </div>
                    <div class="card-body overflow-auto">
                        @if (Model.Vaccine.Count == 0)
                        {
                            <h5>@Model.Name has no received any vaccine yet...</h5>
                        }
                        else
                        {
                            @foreach (var pet in Model.Vaccine)
                            {
                                <div class="card m-2 p-2">
                                    <div class="row">
                                        <div class="col" style="margin-top: 9px">
                                            <h5>@pet.Name</h5>
                                        </div>
                                        <div class="col">
                                            <a href="@Url.Action("Details", "Vaccines", new { id = pet.VaccinesId })" class="btn btn-primary">View Details</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

        </dl>
    </div>
    <div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model?.OwnersId" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>


































