@model PetCenter9.Models.Owners

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h3>Create Owner</h3>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="card-body form-create-height">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label class="control-label">Picture</label>
                        <input type="file" name="ownerPictureFile" class="form-control" />
                        <span asp-validation-for="OwnerPictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" title="Please enter your first name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter your last name" title="Please enter your last name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" placeholder="Enter your age" title="Please enter your age" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" title="Please enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>                                       
                </div>
                <div class="form-group card-footer">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}









