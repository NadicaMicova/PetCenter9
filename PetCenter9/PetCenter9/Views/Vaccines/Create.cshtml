@model PetCenter9.Models.Vaccines

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h3>Create Vaccine</h3>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <form asp-action="Create">
                <div class="card-body form-create-height">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label class="control-label">Vaccines</label>
                <select asp-for="Name" class="form-control">
                        <option value="">Choose vaccine</option>
                        <option value="ParvoShield">ParvoShield</option>
                        <option value="Rabivax">Rabivax</option>
                        <option value="Bordetavax">Bordetavax</option>
                        <option value="DistemperGuard">DistemperGuard</option>
                        <option value="LeukoShield">LeukoShield</option>
                </select>
                <div class="form-group">
                        <label asp-for="Pets" class="control-label"></label>
                        <select asp-for="Pets" class="form-control">
                            <option value="">Select Pet</option>
                            @foreach (var pet in ViewBag.Pet)
                            {
                                <option value="@pet.PetsId">@pet.Name</option>
                            }
                        </select>
                        <span asp-validation-for="Pets" class="text-danger"></span>
                </div>
                </div>
                <div class="form-group card-footer">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
               
            </form>
        </div>
    </div>
</div>

          

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
